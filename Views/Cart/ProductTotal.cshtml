@model CartViewModel

<div class="bg-white p-4 rounded-lg shadow-lg">
    <p class="text-xl font-bold text-gray-800 mb-4">Toplam Fiyat:</p>
    <p id="totalPrice" class="text-2xl font-semibold text-green-600 mb-4">@Model.TotalPrice TL</p>

    <div class="mt-4">
        <button type="button" id="completeShoppingButton" class="inline-block px-6 py-3 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 transition duration-300">
            Alışverişi Tamamla
        </button>
    </div>
</div>
